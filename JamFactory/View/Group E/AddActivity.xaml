<Window x:Class="JamFactory.View.Group_E.AddMeasurement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddMeasurement" Height="482" Width="316" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,1,0,-1">
        <Label Content="  	Tilføj Måling" HorizontalAlignment="Left" Margin="97,11,0,0" VerticalAlignment="Top" Height="36" Width="174" FontSize="15" FontWeight="Bold"/>
        <Button Name="Back" Content="Tilbage" HorizontalAlignment="Left" Margin="43,408,0,0" VerticalAlignment="Top" Width="75" Click="Back_Click"/>
        <Button Name="Save" Content="Gem" HorizontalAlignment="Left" Margin="195,408,0,0" VerticalAlignment="Top" Width="75" Click="Save_Click"/>
        <TextBox Name="Name" HorizontalAlignment="Left" Height="40" Margin="10,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock IsHitTestVisible="False" HorizontalAlignment="Left" Margin="12,66,0,0" TextWrapping="Wrap" Text="Indtast navn for måling..." VerticalAlignment="Top" Foreground="#555" Width="120" Height="39">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=Name}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <TextBox Name="ExpectedResult" HorizontalAlignment="Left" Height="40" Margin="12,185,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock IsHitTestVisible="False" HorizontalAlignment="Left" Margin="12,186,0,0" TextWrapping="Wrap" Text="Indtast det forventede resultat..." VerticalAlignment="Top" Foreground="#555" Width="120" Height="39">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=ExpectedResult}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <Button Name ="AddNewActivity" Content="Tilføj måling" HorizontalAlignment="Left" Margin="79,250,0,0" VerticalAlignment="Top" Width="142" Click="AddNewActivity_Click"/>
        <TextBox Name="Description" HorizontalAlignment="Left" Height="40" Margin="172,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock IsHitTestVisible="False" HorizontalAlignment="Left" Margin="174,66,0,0" TextWrapping="Wrap" Text="Indtast beskrivelse for måling..." VerticalAlignment="Top" Foreground="#555" Width="120" Height="39">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=Description}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBox Name="Details" HorizontalAlignment="Left" Height="40" Margin="9,112,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock IsHitTestVisible="False" HorizontalAlignment="Left" Margin="11,113,0,0" TextWrapping="Wrap" Text="Indtast detaljer for måling..." VerticalAlignment="Top" Foreground="#555" Width="120" Height="39">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=Details}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <DatePicker Name="StartDate" HorizontalAlignment="Left" Margin="174,125,0,0" VerticalAlignment="Top" Width="52"/>
        <TextBox Name="ActualResult" HorizontalAlignment="Left" Height="40" Margin="174,185,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock IsHitTestVisible="False" HorizontalAlignment="Left" Margin="174,186,0,0" TextWrapping="Wrap" Text="Indtast det rigtige resultat..." VerticalAlignment="Top" Foreground="#555" Width="120" Height="39">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=ActualResult}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <ListBox Name="ActivityLine" HorizontalAlignment="Left" Height="100" Margin="12,290,0,0" VerticalAlignment="Top" Width="282"/>
        <TextBox Name="staHours" HorizontalAlignment="Left" Height="23" Margin="228,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="22"/>
        <TextBox Name="staMinuts" HorizontalAlignment="Left" Height="23" Margin="261,125,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="22"/>
        <Label Content="h" HorizontalAlignment="Left" Margin="247,124,0,0" VerticalAlignment="Top" Width="18"/>
        <Label Content="m" HorizontalAlignment="Left" Margin="280,124,0,0" VerticalAlignment="Top" Width="21"/>


    </Grid>
</Window>
