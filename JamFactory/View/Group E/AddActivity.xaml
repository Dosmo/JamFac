<Window x:Class="JamFactory.View.Group_E.AddActivity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddActivity" Height="300" Width="300">
    <Grid>
        <Button Name="Back" Content="Tilbage" HorizontalAlignment="Left" Margin="24,223,0,0" VerticalAlignment="Top" Width="75" Click="Back_Click"/>

        <TextBox Name="AddName" HorizontalAlignment="Left" Height="40" Margin="10,51,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock IsHitTestVisible="False" Text="Indtast kontrol navn..." VerticalAlignment="Top" HorizontalAlignment="Left" Margin="13,51,0,0" Foreground="#555" Height="40" Width="120">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=AddName}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <TextBox Name="AddDescription" HorizontalAlignment="Left" Height="40" Margin="162,51,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock IsHitTestVisible="False" Text="Beskrivelse af kontrol..." VerticalAlignment="Top" HorizontalAlignment="Left" Margin="166,51,0,0" Foreground="#555" Height="40" Width="120">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=AddDescription}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <Button Name="AddNewMeasurement" Content="Tilføj måling" HorizontalAlignment="Left" Margin="191,223,0,0" VerticalAlignment="Top" Width="75" Click="AddNewMeasurement_Click"/>
        <TextBox Name="AddTimeCheck" HorizontalAlignment="Left" Height="40" Margin="10,110,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock IsHitTestVisible="False" Text="Tidsrum for kontrol.." VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,111,0,0" Foreground="#555" Height="40" Width="120">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=AddTimeCheck}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <TextBox Name="AddProductID" HorizontalAlignment="Left" Height="40" Margin="162,110,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock IsHitTestVisible="False" Text="Indtast produkt ID..." VerticalAlignment="Top" HorizontalAlignment="Left" Margin="164,110,0,0" Foreground="#555" Height="40" Width="120">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=AddProductID}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <TextBox Name="AddEmployeeID" HorizontalAlignment="Left" Height="40" Margin="89,166,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="130"/>

        <TextBlock IsHitTestVisible="False" Text="Indtast medarbejder ID..." VerticalAlignment="Top" HorizontalAlignment="Left" Margin="90,167,0,0" Foreground="#555" Height="40" Width="130">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=AddEmployeeID}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <Label Content="         	Opret kontrol" HorizontalAlignment="Left" Margin="36,10,0,0" VerticalAlignment="Top" Height="29" Width="196" FontSize="15" FontWeight="Bold"/>

        
    </Grid>
</Window>
