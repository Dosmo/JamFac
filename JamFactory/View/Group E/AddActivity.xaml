<Window x:Class="JamFactory.View.Group_E.AddMeasurement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddMeasurement" Height="482" Width="282" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,1,0,-1">
        <Label Content="  	Tilføj Måling" HorizontalAlignment="Left" Margin="63,10,0,0" VerticalAlignment="Top" Height="36" Width="174" FontSize="15" FontWeight="Bold"/>
        <Button Content="Tilbage" HorizontalAlignment="Left" Margin="22,408,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Name="Save" Content="Gem" HorizontalAlignment="Left" Margin="174,408,0,0" VerticalAlignment="Top" Width="75" Click="Save_Click"/>
        <TextBox Name="Name" HorizontalAlignment="Left" Height="40" Margin="10,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock IsHitTestVisible="False" HorizontalAlignment="Left" Margin="12,66,0,0" TextWrapping="Wrap" Text="Indtast navn for måling..." VerticalAlignment="Top" Foreground="#555" Width="120" Height="39">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=Name}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <TextBox Name="ExpectedResult" HorizontalAlignment="Left" Height="40" Margin="12,185,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock IsHitTestVisible="False" HorizontalAlignment="Left" Margin="12,186,0,0" TextWrapping="Wrap" Text="Indtast det forventede resultat..." VerticalAlignment="Top" Foreground="#555" Width="120" Height="39">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=ExpectedResult}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <Button Name ="AddNewActivity" Content="Tilføj måling" HorizontalAlignment="Left" Margin="63,250,0,0" VerticalAlignment="Top" Width="142" Click="AddNewActivity_Click"/>
        <TextBox Name="Description" HorizontalAlignment="Left" Height="40" Margin="145,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock IsHitTestVisible="False" HorizontalAlignment="Left" Margin="147,66,0,0" TextWrapping="Wrap" Text="Indtast beskrivelse for måling..." VerticalAlignment="Top" Foreground="#555" Width="120" Height="39">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=Description}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBox Name="Details" HorizontalAlignment="Left" Height="40" Margin="9,112,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock IsHitTestVisible="False" HorizontalAlignment="Left" Margin="11,113,0,0" TextWrapping="Wrap" Text="Indtast detaljer for måling..." VerticalAlignment="Top" Foreground="#555" Width="120" Height="39">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=Details}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <DatePicker Name="StartDate" HorizontalAlignment="Left" Margin="145,125,0,0" VerticalAlignment="Top"/>
        <TextBox Name="ActualResult" HorizontalAlignment="Left" Height="40" Margin="139,185,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock IsHitTestVisible="False" HorizontalAlignment="Left" Margin="139,186,0,0" TextWrapping="Wrap" Text="Indtast det rigtige resultat..." VerticalAlignment="Top" Foreground="#555" Width="120" Height="39">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=ActualResult}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <ListBox Name="ActivityLine" HorizontalAlignment="Left" Height="100" Margin="12,290,0,0" VerticalAlignment="Top" Width="247"/>


    </Grid>
</Window>
